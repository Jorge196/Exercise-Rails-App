<h1>Exercises </h1>
<nav>
    <button><%= link_to "New Exercise", new_exercise_path %></button>
</nav>
<%= form_tag(exercises_path, method: 'get') do %>
  <label for="sort_alphabetically">Alphabetical</label>
  <select name="sort_alphabetically">
    <option <%= 'selected' if params[:sort_alphabetically] == '' %> value="">None</option>
    <option <%= 'selected' if params[:sort_alphabetically] == 'alphabetical' %> value="alphabetical">Alphabetical</option>

  </select>
  <label for="sort">Sort</label>
  <select name="sort">
    <option <%= 'selected' if params[:sort] == '' %> value="">None</option>
    <option <%= 'selected' if params[:sort] == 'popular' %> value="popular">Most Popular</option>
  </select>
  <%= submit_tag 'Filter Results' %>
<% end %>
   
<div>
<table>
    <style>
    table, th, td{border: 1px solid black;}
        th {width: 140px}
        td {width: 150px}
    </style>
    <tr>
        <th>Exercises</th>
        <th>Exercise Log Count</th>
        
    </tr>
    <% @exercises.each do |exercise| %>
        <tr>
            <td><%= link_to exercise.name, exercise_path(exercise) %></td>
            <td><%= exercise.exercise_log_count%>
        </tr>
    <% end %>      
</table> 
</div>